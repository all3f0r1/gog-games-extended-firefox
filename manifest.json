{
  "manifest_version": 3,
  "name": "GOG Games Extended",
  "version": "1.3.2",
  "description": "Enriches gog-games.to pages with media (images and videos) from GOG Database",
  "author": "Manus AI",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "gog-games-extended@manus.ai",
      "data_collection_permissions": {
        "interaction": false,
        "usage": false,
        "health": false
      }
    }
  },
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "host_permissions": [
    "*://gog-games.to/*",
    "https://www.gogdb.org/*",
    "https://images.gog-statics.com/*"
  ],
  
  "background": {
    "scripts": ["src/background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["*://gog-games.to/*"],
      "js": ["src/content-script.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "permissions": []
}
